---
import BaseLayout from '../../layouts/BaseLayout.astro'
import AddToCart from '../../components/cart/AddToCart.astro'
import { getStaticProduct } from '../../api/products'

export const getStaticPaths = getStaticProduct

const { title, description, gallery, price, id } = Astro.props
---

<BaseLayout title={`${title} | 6:52`}>
  <section>
    <div class="px-8 py-12 mx-auto max-w-7xl md:px-12">
      <div class="lg:gap-x-8 lg:gap-y-10 lg:grid lg:grid-cols-7 lg:grid-rows-1 xl:gap-x-16">
        <div class="lg:col-span-4 lg:row-end-1">
          <ul class="grid gap-4">
            {gallery.map(({ src, width, height, alt, srcset }) => (
              <li>
                <img
                  class="rounded"
                  src={src}
                  alt={alt}
                  width={width}
                  height={height}
                  srcset={srcset}
                  decoding="async"
                  sizes="100vw"
                />
              </li>
            ))}
          </ul>
        </div>

        <div class="mx-auto lg:col-span-3 lg:max-w-none lg:mt-0 lg:row-end-2 lg:row-span-2 max-w-2xl mt-14 sm:mt-16">
          <div class="sticky top-3">
            <h1 class="text-3xl" set:html={title} />
            <p class="text-xl mt-2" set:html={price} />
            <div class="mt-4">
              <AddToCart productID={id} />
            </div>
            <p class="mt-5" set:html={description} />
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
